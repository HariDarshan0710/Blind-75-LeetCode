class BikerAltitude {
    public int largestAltitude(int[] gain) {
        int max=0;
        int n=gain.length;
        int sum=0;
        for(int i=0;i<n;i++){
            sum=sum+gain[i];
            max=Math.max(max,sum);
        }
    return max;
}
public static void main(String[] args){
   int [] gain={-5,1,5,0,7};
   System.out.println(largestAltitude(gain));
   }
}
